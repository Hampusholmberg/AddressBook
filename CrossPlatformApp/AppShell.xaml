<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrossPlatformApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    xmlns:views="clr-namespace:CrossPlatformApp.Views"
    
    Shell.FlyoutBehavior="Disabled"
    Title="CrossPlatformApp">

    <ShellContent Title="Contact List" ContentTemplate="{DataTemplate views:ContactListView}" Route="ContactListView" />

    <ShellContent Title="Add Contact" ContentTemplate="{DataTemplate views:AddContactView}" Route="AddContactView" />

    <ShellContent Title="Edit Contact" ContentTemplate="{DataTemplate views:EditContactView}" Route="EditContactView" />

    <ShellContent Title="Spec Contact" ContentTemplate="{DataTemplate views:SpecificContactView}" Route="SpecificContactView" />

</Shell>
